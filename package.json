{
  "name": "tabgroup",
  "displayName": "Tab Group",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "create.group",
        "title": "새 그룹에 탭 추가"
      },
      {
        "command": "update.group.children",
        "title": "기존 그룹에 탭 추가"
      },
      {
        "command": "delete.tab",
        "title": "그룹에서 탭 삭제"
      },
      {
        "command": "update.group.name",
        "title": "그룹 이름 수정"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "create.group",
          "group": "navigation"
        },
        {
          "command": "update.group.children",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "create.group",
          "group": "navigation"
        },
        {
          "command": "update.group.children",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "delete.tab",
          "when": "viewItem == defaultTab",
          "group": "navigation"
        },
        {
          "command": "update.group.name",
          "when": "viewItem == defaultGroup",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tab-group",
          "title": "Tab Group",
          "icon": "resources/tab-group.svg"
        }
      ]
    },
    "views": {
      "tab-group": [
        {
          "id": "tabgroup",
          "name": "탭그룹"
        },
        {
          "id": "tabgroup.bookmark",
          "name": "탭그룹 북마크"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.2",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
